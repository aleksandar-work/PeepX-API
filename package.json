        "chai-as-promised": "^7.1.1",
        "cloudinary": "^1.13.2",
        "compression": "^1.7.3",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "dotenv-safe": "^6.1.0",
        "escape-html": "^1.0.3",
        "express": "^4.16.4",
        "express-validator": "^5.3.1",
        "faker": "^4.1.0",
        "file-type": "^10.11.0",
        "firebase-admin": "^7.0.0",
        "frameguard": "^3.0.0",
        "fs": "0.0.1-security",
        "helmet": "^3.15.0",
        "jsonwebtoken": "^8.4.0",
        "mocha": "^5.2.0",
        "mongoose": "^5.4.2",
        "multiparty": "^4.2.1",
        "node-gyp": "^3.8.0",
